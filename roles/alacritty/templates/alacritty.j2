env:
  WINIT_X11_SCALE_FACTOR: "1"
# Colors (Gruvbox Material Dark Medium)
shell:
  program: bash
window:
  padding:
    x: 5
    y: 5
  opacity: 0.9
  dimensions:
    columns: 100
    lines: 35
size: 12.5
colors:
  primary:
    background: '0x282828'
    foreground: '0xdfbf8e'

  normal:
    black:   '0x665c54'
    red:     '0xea6962'
    green:   '0xa9b665'
    yellow:  '0xe78a4e'
    blue:    '0x7daea3'
    magenta: '0xd3869b'
    cyan:    '0x89b482'
    white:   '0xdfbf8e'

  bright:
    black:   '0x928374'
    red:     '0xea6962'
    green:   '0xa9b665'
    yellow:  '0xe3a84e'
    blue:    '0x7daea3'
    magenta: '0xd3869b'
    cyan:    '0x89b482'
    white:   '0xdfbf8e'
font:
  normal:
    family: Fira Code Nerd Font
    style: Regular

  bold:
    family: Fira Code Nerd Font
    style: Bold

  italic:
    family: Fira Code Nerd Font
    style: Italic

  bold_italic:
    family: Fira Code Nerd Font
    style: Bold Italic
