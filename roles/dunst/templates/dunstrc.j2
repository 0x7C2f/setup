[global]
    show_indicators = true
    monitor = 0
    follow = keyboard
    width = 500
    height = 500
    offset = 15x20
    indicate_hidden = no
    shrink = no
    transparency = 0
    notification_height = 0
    separator_height = 8
    padding = 10
    horizontal_padding = 10
    frame_width = 0
    frame_color = "#817F7F"
    separator_color = "#05050500"
    sort = no
    idle_threshold = 0

    ### Text ###
    font = Hack Nerd Font
    line_height = 12
    markup = full
    alignment = right
    show_age_threshold = -1
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = false
    hide_duplicate_count = true
    show_indicators = no

    ### Icons ###
    icon_position = left
    max_icon_size = 64
    sticky_history = yes

    # Maximum amount of notifications kept in history
    history_length = 1
    title = Dunst
    class = Dunst
    startup_notification = false


## Shortcuts ##
[shortcuts]
    context = ctrl+shift+period


## URGENCY LEVELS ##

[urgency_low]
    background = "#000000"
    foreground = "#ffffff"
    timeout = 10

[urgency_normal]
    background = "#000000"
    foreground = "#ffffff"
    timeout = 10

[urgency_critical]
    background = "#000000"
    foreground = "#ffffff"
    timeout = 10

[repeater]
    background = "#000000"
    foreground = "#ffffff"
    timeout = 10ya